@{
    ViewData["Title"] = "Menú Principal";
}
<link rel="stylesheet" href="~/css/site.css" />

<body>
    <header>
        <h1>Menú Principal</h1>
    </header>
    <ul>
        <li><a class="menu-btn" href="/Home/Juego1">Mini Juego 1: Adivina el número</a></li>
        <li><a class="menu-btn" href="/Home/Juego2">Mini Juego 2</a></li>
    </ul>
</body>
@if (ViewBag.MaxNumber != null && ViewBag.MaxNumber > 0)
{
    <form method="post">
        <div class="game-container">
            <input type="hidden" name="maxNumber" value="@ViewBag.MaxNumber" />
            @if (ViewBag.MaxNumber != null && ViewBag.MaxNumber > 0)
            {
                var randomNumber = ViewBag.RandomNumber ?? new System.Random().Next(0, (int)ViewBag.MaxNumber + 1);
                <input type="hidden" name="randomNumber" value="@randomNumber" />
            }
            <label for="guess">Adivina el número (entre 0 y @ViewBag.MaxNumber):</label>
            <input type="number" id="guess" name="guess" min="0" max="@ViewBag.MaxNumber" required />
            <button type="submit">Adivinar</button>
        </div>
    </form>
}

@if (ViewBag.Message != null)
{
    <div class="result-message">@ViewBag.Message</div>
}

